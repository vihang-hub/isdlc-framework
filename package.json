{
  "name": "isdlc",
  "version": "0.1.0-alpha",
  "type": "module",
  "description": "Structured AI-powered software development lifecycle framework for Claude Code - 48 agents, 240 skills, 17 quality gates",
  "keywords": [
    "sdlc",
    "ai",
    "claude",
    "claude-code",
    "development",
    "agents",
    "framework",
    "quality-gates",
    "automation"
  ],
  "author": "iSDLC Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/isdlc.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/isdlc/issues"
  },
  "homepage": "https://github.com/your-org/isdlc#readme",
  "bin": {
    "isdlc": "./bin/isdlc.js"
  },
  "main": "lib/cli.js",
  "files": [
    "bin/",
    "lib/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "node --test lib/*.test.js lib/utils/*.test.js",
    "test:hooks": "node --test src/claude/hooks/tests/*.test.cjs",
    "test:char": "node --test tests/characterization/*.test.js",
    "test:e2e": "node --test tests/e2e/*.test.js",
    "test:all": "npm test && npm run test:hooks && npm run test:char && npm run test:e2e",
    "lint": "echo 'No linter configured'",
    "prepare": "echo 'Package ready'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2",
    "semver": "^7.6.0"
  },
  "devDependencies": {}
}
