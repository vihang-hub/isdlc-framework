{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "interactive-elicitation",
  "title": "Interactive Elicitation State",
  "description": "Schema for phases[*].iteration_requirements.interactive_elicitation in state.json",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean",
      "description": "Whether elicitation is finished"
    },
    "menu_interactions": {
      "type": "integer",
      "minimum": 0,
      "description": "Count of A/R/C menu interactions"
    },
    "final_selection": {
      "type": "string",
      "enum": ["save", "continue", "exit"],
      "description": "The terminal menu selection"
    },
    "selections": {
      "type": "array",
      "description": "History of all selections"
    },
    "steps_completed": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of completed step names"
    }
  },
  "required": ["completed", "menu_interactions"],
  "additionalProperties": true
}
