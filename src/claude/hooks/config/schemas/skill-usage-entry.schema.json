{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "skill-usage-entry",
  "title": "Skill Usage Log Entry",
  "description": "Schema for entries in skill_usage_log[] in state.json",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "description": "ISO-8601 timestamp" },
    "agent": { "type": "string", "description": "Agent name" },
    "agent_phase": { "type": "string", "description": "Agent's designated phase" },
    "current_phase": { "type": "string", "description": "Current workflow phase" },
    "description": { "type": "string", "description": "Action description" },
    "status": { "type": "string", "enum": ["executed", "observed", "warned", "audited"] },
    "reason": { "type": "string" },
    "enforcement_mode": { "type": "string" }
  },
  "required": ["timestamp", "agent", "status"],
  "additionalProperties": true
}
