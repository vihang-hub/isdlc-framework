{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "test-iteration",
  "title": "Test Iteration State",
  "description": "Schema for phases[*].iteration_requirements.test_iteration in state.json",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean",
      "description": "Whether test iteration is finished"
    },
    "status": {
      "type": "string",
      "enum": ["success", "escalated"],
      "description": "Final status when completed"
    },
    "current_iteration": {
      "type": "integer",
      "minimum": 0,
      "description": "Current iteration count"
    },
    "max_iterations": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum iterations allowed"
    },
    "last_test_result": {
      "type": "string",
      "enum": ["passed", "failed"],
      "description": "Most recent test outcome"
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "iteration": { "type": "integer" },
          "timestamp": { "type": "string" },
          "command": { "type": "string" },
          "result": { "type": "string" }
        }
      },
      "description": "Iteration history entries"
    }
  },
  "required": ["completed", "current_iteration"],
  "additionalProperties": true
}
