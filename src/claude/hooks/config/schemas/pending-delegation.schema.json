{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pending-delegation",
  "title": "Pending Delegation Marker",
  "description": "Schema for pending_delegation in state.json",
  "type": "object",
  "properties": {
    "skill": { "type": "string", "description": "Skill name (isdlc or discover)" },
    "required_agent": { "type": "string", "description": "Agent that must be delegated to" },
    "invoked_at": { "type": "string", "description": "ISO-8601 timestamp of invocation" },
    "args": { "type": "string", "description": "Arguments passed to the skill" }
  },
  "required": ["skill", "required_agent", "invoked_at"],
  "additionalProperties": true
}
