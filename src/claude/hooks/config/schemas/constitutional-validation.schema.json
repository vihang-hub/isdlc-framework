{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "constitutional-validation",
  "title": "Constitutional Validation State",
  "description": "Schema for phases[*].constitutional_validation in state.json",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean",
      "description": "Whether constitutional validation is finished"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "iterating", "compliant", "escalated"],
      "description": "Current validation status"
    },
    "iterations_used": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of validation iterations performed"
    },
    "max_iterations": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum validation iterations allowed"
    },
    "articles_checked": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Constitutional articles that were validated"
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "iteration": { "type": "integer" },
          "timestamp": { "type": "string" },
          "violations": { "type": "array" },
          "result": { "type": "string" }
        }
      },
      "description": "Iteration history entries"
    }
  },
  "required": ["completed", "status", "iterations_used"],
  "additionalProperties": true
}
