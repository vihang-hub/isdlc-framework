{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hook-stdin-pretooluse",
  "title": "PreToolUse Hook Stdin",
  "description": "JSON structure received via stdin by PreToolUse hooks from Claude Code",
  "type": "object",
  "properties": {
    "tool_name": {
      "type": "string",
      "description": "Name of the tool being called (Task, Skill, Bash, Read, Write, etc.)"
    },
    "tool_input": {
      "type": "object",
      "description": "Input parameters passed to the tool",
      "properties": {
        "command": { "type": "string", "description": "For Bash tool: the command string" },
        "subagent_type": { "type": "string", "description": "For Task tool: agent name" },
        "prompt": { "type": "string", "description": "For Task tool: task prompt" },
        "description": { "type": "string", "description": "For Task tool: task description" },
        "skill": { "type": "string", "description": "For Skill tool: skill name" },
        "args": { "type": "string", "description": "For Skill tool: arguments" }
      },
      "additionalProperties": true
    }
  },
  "required": ["tool_name"],
  "additionalProperties": true
}
